## ---- include = FALSE---------------------------------------------------------
knitr::opts_chunk$set(
  collapse = TRUE,
  comment = "#>"
)

## ----setup--------------------------------------------------------------------
library(CentralDogmaGroup7)

## -----------------------------------------------------------------------------
DNA <- random_DNA(10000)

## -----------------------------------------------------------------------------
mRNA <- transcription(DNA)

## -----------------------------------------------------------------------------
codons <- codon_extractor(mRNA)

## -----------------------------------------------------------------------------
amino_acids <- translation(codons)

## -----------------------------------------------------------------------------
plot_occurrence(amino_acids)

